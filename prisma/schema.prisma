generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id           String  @id @default(uuid())
  name         String?
  neonNickName String? @unique
  email        String  @unique
  accessT      String?
  usersPosts   Post[]  @relation("UsersPosts")

  @@unique([neonNickName, email])
  @@index([neonNickName])
}

model Post {
  id             String   @id @default(uuid())
  title          String
  createdAt      DateTime @default(now())
  updetedAt      DateTime @updatedAt
  published      Boolean  @default(true)
  author         User     @relation("UsersPosts", fields: [authorId], references: [id])
  authorId       String
  comments       Json
  averagePopular Float
  views          Int      @default(0)
  likes          Int      @default(0)
  hashtag        String
}
